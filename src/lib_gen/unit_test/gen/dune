(executable
 (name gen)
 (modules gen)
 (libraries bindoj_test_common_typedesc_examples bindoj_gen bindoj_runtime)
 (flags (:standard -open Kxclib -w "-32-33")))

(executable
 (name gen_embed_full_impl)
