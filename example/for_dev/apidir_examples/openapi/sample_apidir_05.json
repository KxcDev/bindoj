            "application/json": {
              "schema": { "$ref": "#/components/schemas/String" },
              "examples": {
                "example_0": { "value": "42" },
                "example_1": { "value": "" },
                "example_2": { "value": "0" },
                "example_3": { "value": "2020" },
                "example_4": { "value": "a" },
                "example_5": { "value": "11.2" }
