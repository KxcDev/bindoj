{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CustomizedUnion",
  "description": "variant with customized discriminator and argument names",
  "id": "#CustomizedUnion",
  "oneOf": [
    {
      "title": "case1'",
      "description": "custom arg name (value)",
      "type": "object",
      "properties": { "value": { "type": "integer" }, "tag": { "enum": ["case1'"], "type": "string" } },
      "required": ["value", "tag"],
      "additionalProperties": false
    },
    {
      "title": "case2'",
      "type": "object",
      "properties": {
        "x'": { "type": "integer" },
        "y'": { "type": "integer" },
        "tag": { "enum": ["case2'"], "type": "string" }
      },
      "required": ["x'", "y'", "tag"],
      "additionalProperties": false
    }
  ]
}
