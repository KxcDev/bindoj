            "type": "object",
            "properties": {
              "facultyId": {
                "description": "faculty_id field in Teacher constructor",
                "type": "integer"
              },
              "name": {
                "description": "name field in Teacher constructor",
                "type": "string"
              },
              "department": {
                "description": "dapartment field in Teacher constructor",
