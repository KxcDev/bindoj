(rule
 (alias node_modules)
 (deps
  (sandbox none)
  (source_tree src)
  (glob_files *))
 (action
  (progn
   (run yarn install --frozen-lockfile)
   (run yarn clean))))

(rule
 (alias runtest)
 (deps
  (sandbox none)
  (alias node_modules)
  (alias compile-tests/gen)
  (source_tree unit-tests))
 (action (run yarn test)))

(dirs :standard \ node_modules)
